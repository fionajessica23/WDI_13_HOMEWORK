<form action="/dishes/<%= @dish.id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>Dish name</label>
  <input type="text" name="name" value="<%= @dish.name %>">

  <label for="">Description</label>
  <textarea name="description"><%= @dish.description %></textarea>
  <% @venues.each do |venue| %>
    <% if venue.id == @dish.venue_id %>
      <option value="<%= venue.id %>" selected><%= venue.name %></option>
    <% else %>
      <option value="<%= venue.id %>"><%= venue.name %></option>
    <% end %>
  <% end %>
  <button type="submit">Update</button>
</form>
